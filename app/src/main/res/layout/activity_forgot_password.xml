<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/ic_round_arrow_back_24"
        app:tint="@color/color_text_primary"
        android:id="@+id/fp_backBtn"
        android:layout_marginStart="@dimen/_15sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitobold"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/color_text_primary"

        android:text="Forgot Password"
        app:layout_constraintTop_toTopOf="@id/fp_backBtn"
        app:layout_constraintBottom_toBottomOf="@id/fp_backBtn"
        app:layout_constraintStart_toEndOf="@id/fp_backBtn"
        android:layout_marginStart="@dimen/_15sdp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code has been sent to "
        android:id="@+id/sentTo_txt"
        app:layout_constraintTop_toBottomOf="@id/fp_backBtn"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/fontreguler"
        android:textColor="@color/color_text_primary"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="billykybe@gmail.com"
        app:layout_constraintTop_toBottomOf="@id/sentTo_txt"
        app:layout_constraintStart_toStartOf="@id/sentTo_txt"
        app:layout_constraintEnd_toEndOf="@id/sentTo_txt"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/black"
        android:textStyle="bold"


        android:fontFamily="@font/fontreguler"

        android:id="@+id/email_txt"

        />

<!--    todo://-->

</androidx.constraintlayout.widget.ConstraintLayout>