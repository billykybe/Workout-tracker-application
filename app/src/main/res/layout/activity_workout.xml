<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workout">

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/_120sdp"

      android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/colapsbar"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.MaterialComponents.Light"
        app:collapsedTitleTextColor="@color/white"
        app:contentScrim="@color/color_primary"
        app:expandedTitleMarginBottom="@dimen/_15sdp"
        app:expandedTitleMarginStart="@dimen/_15sdp"
        app:expandedTitleTextColor="@color/color_primary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fitsSystemWindows="true"

          android:scaleType="centerCrop"
          android:src="@drawable/cover_fullbody"
          app:layout_collapseMode="parallax" />

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:layout_gravity="bottom"
          android:background="@drawable/ft_bg"

          />


    </androidx.appcompat.widget.Toolbar>
  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"

      android:background="@color/color_primary"
      android:overScrollMode="never"
      app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/workoutdata"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginBottom="@dimen/_10sdp"
          android:fontFamily="@font/nunitosemibold"
          android:text="15 mins - 14 workouts"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />


      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv_workout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_20sdp"
          tools:listitem="@layout/workouts_item"
          android:paddingBottom="@dimen/_60sdp"
          app:layout_constraintTop_toBottomOf="@id/workoutdata" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_gravity="bottom"
      android:background="@color/color_primary"
      android:padding="@dimen/_15sdp"
      android:layout_height="wrap_content"

      >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with password"
app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="@dimen/_3sdp"
        android:fontFamily="@font/nunitosemibold"







        android:id="@+id/startbtn"
        android:background="@drawable/continue_bg"

        android:textSize="@dimen/_14ssp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:padding="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:gravity="center"

        android:layout_marginBottom="@dimen/_20sdp"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>